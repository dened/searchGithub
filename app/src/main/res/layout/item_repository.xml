<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView"
    card_view:cardCornerRadius="6dp"
    card_view:cardUseCompatPadding="true"
    android:layout_marginLeft="@dimen/margin_half"
    android:layout_marginRight="@dimen/margin_half"
    card_view:cardBackgroundColor="@android:color/background_light">
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_default">
    <ImageView
        android:id="@+id/avatarView"
        android:layout_width="@dimen/item_repository_avatar_side"
        android:layout_height="@dimen/item_repository_avatar_side"
        tools:src="@drawable/ic_image_placeholder"/>

    <TextView
        android:id="@+id/repositoryNameView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/AppTheme.TextAppearance.Title"
        tools:text="Application name"
        android:layout_marginBottom="@dimen/margin_default"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_toRightOf="@+id/avatarView"
        android:layout_toEndOf="@+id/avatarView" />

    <TextView
        android:id="@+id/repositoryDescriptionView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/AppTheme.TextAppearance.Body1"
        tools:text="Android projects with reusable components which will be useful in your applications."
        android:maxLines="4"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_below="@id/repositoryNameView"
        android:layout_toRightOf="@+id/avatarView"
        android:layout_toEndOf="@+id/avatarView"
         />



</RelativeLayout>
</android.support.v7.widget.CardView>